{
  "version": "2",
  "mpp-vars": {
    "extra_image_copy": [
      {
        "from": "input://build-tree/usr/share/uboot/rpi_4/u-boot.bin",
        "to": "mount://root/boot/efi/rpi4-u-boot.bin"
      }
    ],
    "extra_image_copy_ostree": [
      {
        "from": "input://ostree-tree/lib/ostree-boot/efi/",
        "to": "mount://root/boot/efi/"
      }
    ],
    "extra_image_rpms": ["pi4-firmware-blob"],
    "extra_dracut_drivers": [ "bcm2835", "sdhci"  ]
  },
  "pipelines": [
    {
      "name": "rpi4",
      "runner": "org.osbuild.centos9"
    }
  ]
}

                "architecture": "$arch",
                "module-platform-id": "platform:el8",
                "baseurl": "$cs8_baseurl/BaseOS/$arch/os/",
                "repos": [
                  {
                    "id": "default",
                    "baseurl": "$cs8_baseurl/BaseOS/$arch/os/"
                  },
                  {
                    "id": "appstream",
                    "baseurl": "$cs8_baseurl/AppStream/$arch/os/"

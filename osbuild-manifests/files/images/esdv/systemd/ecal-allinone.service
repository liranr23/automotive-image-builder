[Unit]
Description=Eclipse Ecal Sample PubSub Application Stack
Wants=network-online.target
After=network-online.target
RequiresMountsFor=%t/containers

[Service]
TimeoutStopSec=70
Restart=always
ExecStart=/usr/bin/podman --log-level=debug play kube --replace --service-container=true /etc/autosd/podman/allinone.yaml
ExecStop=/usr/bin/podman play kube --down /etc/autosd/podman/allinone.yaml
Type=notify
NotifyAccess=all

[Install]
WantedBy=default.target
